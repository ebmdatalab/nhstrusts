# Redirects to match what was in our paper
server {
    listen 80;
    listen [::]:80;
    server_name www.theycareforyou.org theycareforyou.org;
    rewrite ^/.*$ https://coi.theycareforyou.org permanent;
}

server {
    listen 80;
    listen [::]:80;
    server_name coi.theycareforyou.org;
    root /var/www/nhscoi/nhstrusts/_site;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    client_max_body_size 200M;

    location / {
        access_log /var/log/nginx/nhscoi.access.log;
        error_log /var/log/nginx/nhscoi.error.log;
    }

}
